{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api" : {
        "ClusterId": "api",
        "AuthorizationPolicy": "hmac",
        "Match": {
          "Path": "/api/{**remainder}"
        },
        "Transforms": [
          { "PathPattern": "/{**remainder}" }
        ]
      },
      "default" : {
        "AuthorizationPolicy": "anonymous",
        "ClusterId": "frontend",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api": {
        /*"HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:02",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },*/
        "Destinations": {
          "api": {
            "Address": "http://api"
          }
        }
      },
      "frontend": {
        "Destinations": {
          "frontend": {
            "Address": "http://frontend"
          }
        }
      }
    }
  },
  "HMAC":
  {
    "ApiSecrets": [
      { 
        "id": "Demo",
        "secret": "SECRET"
      }
    ]
  }
 }